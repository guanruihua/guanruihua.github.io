{
	"compilerOptions": {
		"rootDir": "./src",
		"target": "ESNext",
		"module": "nodenext",
		"lib": ["ESNext"],
		"sourceMap": true,
		"removeComments": true,
		"strict": false,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipDefaultLibCheck": true,
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"declaration": true,
		"declarationDir": "dist",
		"declarationMap": true,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"typeRoots": [
			"*.d.ts",
			"node_modules/@types",
			"node_modules/**/*.d.ts",
			"src/assets/types/*.d.ts"
		]
	},
	"exclude": [
		"dist",
		"temp",
		"node_modules",
		"config/*.ts"
	],
	"include": [
		"components/**/*",
		"src/**/*",
		"**/*.d.ts"
	],
	 "ts-node": {
    "esm": true,
		"experimentalSpecifierResolution": "node"
  }
}